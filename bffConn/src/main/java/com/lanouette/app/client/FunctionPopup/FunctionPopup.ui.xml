<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>

    <ui:style>
        .panel {
            width: 300px;
        }

        .bottomPanel {
            border-top: solid 1px black;
            outline:none;
        }

        .tableCenter{
            margin: auto;
        }

        .buttonPanel {
            outline: none;
        }
    </ui:style>

    <g:VerticalPanel ui:field="mainPanel" styleName="{style.panel}">
        <g:FocusPanel ui:field="fontSizePanel" addStyleNames="{style.buttonPanel}">
            <g:HorizontalPanel>
                <g:Image url="images/fontsize.png" addStyleNames="popupImage"></g:Image>
                <g:cell verticalAlignment="ALIGN_MIDDLE">
                    <g:Label ui:field="fontSizeLabel" addStyleNames="popupLabel">Mode normal</g:Label>
                </g:cell>
            </g:HorizontalPanel>
        </g:FocusPanel>

        <g:FocusPanel ui:field="infoPanel" addStyleNames="{style.buttonPanel}">
            <g:HorizontalPanel>
                <g:Image url="images/info.png" addStyleNames="popupImage"></g:Image>
                <g:cell verticalAlignment="ALIGN_MIDDLE">
                    <g:Label addStyleNames="popupLabel">Info</g:Label>
                </g:cell>
            </g:HorizontalPanel>
        </g:FocusPanel>

        <g:FocusPanel ui:field="localPanel" addStyleNames="{style.buttonPanel}">
            <g:HorizontalPanel>
                <g:Image url="images/local.png" addStyleNames="popupImage"></g:Image>
                <g:cell verticalAlignment="ALIGN_MIDDLE">
                    <g:Label addStyleNames="popupLabel">Localisation</g:Label>
                </g:cell>
            </g:HorizontalPanel>
        </g:FocusPanel>

        <g:FocusPanel ui:field="statsPanel" addStyleNames="{style.buttonPanel}">
            <g:HorizontalPanel>
                <g:Image url="images/stats.png" addStyleNames="popupImage"></g:Image>
                <g:cell verticalAlignment="ALIGN_MIDDLE">
                    <g:Label addStyleNames="popupLabel">Stats</g:Label>
                </g:cell>
            </g:HorizontalPanel>
        </g:FocusPanel>

        <g:FocusPanel ui:field="octoPanel">
            <g:HorizontalPanel>
                <g:Image url="images/octopus.png" addStyleNames="popupImage"></g:Image>
                <g:cell verticalAlignment="ALIGN_MIDDLE">
                    <g:Label addStyleNames="popupLabel">Saut</g:Label>
                </g:cell>
            </g:HorizontalPanel>
        </g:FocusPanel>

        <g:FocusPanel ui:field="alertPanel" addStyleNames="{style.buttonPanel}">
            <g:HorizontalPanel>
                <g:Image ui:field="audioButton" url="images/speaker.png" addStyleNames="popupImage"></g:Image>
                <g:cell verticalAlignment="ALIGN_MIDDLE">
                    <g:HTMLPanel>
                    <g:Label addStyleNames="popupLabel">Alertes</g:Label>
                    <g:Label ui:field="alertDescription" addStyleNames="popupSubLabel">Mode operation</g:Label>
                    </g:HTMLPanel>
                </g:cell>
            </g:HorizontalPanel>
        </g:FocusPanel>

        <g:FocusPanel ui:field="logoutPanel" addStyleNames="{style.buttonPanel}">
            <g:HorizontalPanel>
                <g:Image url="images/logout.png" addStyleNames="popupImage"></g:Image>
                <g:cell verticalAlignment="ALIGN_MIDDLE">
                    <g:Label addStyleNames="popupLabel">DÃ©connexion</g:Label>
                </g:cell>
            </g:HorizontalPanel>
        </g:FocusPanel>

        <g:FocusPanel ui:field="closePanel" styleName="{style.bottomPanel}">
        <g:HorizontalPanel styleName="{style.tableCenter}">
            <g:Image url="images/close.png" addStyleNames="popupImage" ></g:Image>
            <g:cell verticalAlignment="ALIGN_MIDDLE">
                <g:Label addStyleNames="popupLabel">Fermer</g:Label>
            </g:cell>
        </g:HorizontalPanel>
        </g:FocusPanel>

        <!--<g:cell horizontalAlignment="ALIGN_CENTER">-->
            <!--<g:Button ui:field="closeButton" styleName="popupButton">Fermer</g:Button>-->
        <!--</g:cell>-->
    </g:VerticalPanel>

</ui:UiBinder>