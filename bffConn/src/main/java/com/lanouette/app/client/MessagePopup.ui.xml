<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>

    <ui:style>
        .closeButton {
            font-weight: bold;
            font-size: x-large !important;
            padding: 4px 10px !important;
            margin: 4px !important;
        }
    </ui:style>


    <g:VerticalPanel ui:field="mainPanel">
        <g:FocusPanel ui:field="starPanel">
            <g:HorizontalPanel>
                <g:Image url="images/star.png" addStyleNames="popupImage" ui:field="starImage"></g:Image>
                <g:cell verticalAlignment="ALIGN_MIDDLE">
                    <g:Label addStyleNames="popupLabel">Étoiler</g:Label>
                </g:cell>
            </g:HorizontalPanel>
        </g:FocusPanel>

        <g:Label ui:field="starersBox" visible="false"></g:Label>

        <g:FocusPanel ui:field="deletePanel">
            <g:HorizontalPanel>
                <g:Image url="images/delete.png" addStyleNames="popupImage" ui:field="deleteImage"></g:Image>
                <g:cell verticalAlignment="ALIGN_MIDDLE">
                    <g:Label addStyleNames="popupLabel">Effacer</g:Label>
                </g:cell>
            </g:HorizontalPanel>
        </g:FocusPanel>

        <g:FocusPanel ui:field="editPanel">
            <g:HorizontalPanel>
                <g:Image url="images/edit.png" addStyleNames="popupImage" ui:field="editImage"></g:Image>
                <g:cell verticalAlignment="ALIGN_MIDDLE">
                    <g:Label addStyleNames="popupLabel">Éditer</g:Label>
                </g:cell>
            </g:HorizontalPanel>
        </g:FocusPanel>

        <g:cell horizontalAlignment="ALIGN_CENTER">
            <g:Button styleName="{style.closeButton}" ui:field="closeButton">Fermer</g:Button>
        </g:cell>
    </g:VerticalPanel>

</ui:UiBinder>