<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>

    <ui:style>
        .panel {
            min-height: 100px;
            width: 200px;
            /*border: 1px solid black;*/
            background: #ffffff;
            box-shadow: 4px 4px 5px #888888;
        }

        .titleText {
            font-size: 14px;
            font-weight: bold;
            color: black;
            padding-top: 6px;
            padding-left: 6px;
            height: 20px;
            background: -webkit-gradient(linear, 0% 0%, 0% 100%, from(#555555), to(#ffffff));
            background: -moz-linear-gradient(top, #555555, #ffffff);
            background: -ms-linear-gradient(top, #555555, #ffffff);
        }

    </ui:style>

    <g:HTMLPanel ui:field="mainPanel" addStyleNames="{style.panel}">
        <!--<g:VerticalPanel addStyleNames="{style.headerPanel}">-->
            <g:SimplePanel ui:field="header" >
                <g:Label addStyleNames="{style.titleText}">En ligne</g:Label>
            </g:SimplePanel>
            <g:FlowPanel ui:field="usersView"></g:FlowPanel>
        <!--</g:VerticalPanel>-->
    </g:HTMLPanel>
</ui:UiBinder>